---
export interface Props {
    name: string
    linkedin: string
    github: string
    instagram: string
    twitter: string

}
const { name, linkedin, github, instagram, twitter } = Astro.props
---
<footer class="py-12 bg-white dark:bg-gray-900 border-t border-gray-200 dark:border-gray-800">
    <div class="container mx-auto px-6">
        <div class="flex flex-col md:flex-row justify-between items-center">
            <div class="mb-6 md:mb-0">
                <a href="#" class="text-2xl font-bold text-gradient">Portfolio</a>
                <p class="mt-2 text-gray-600 dark:text-gray-400">
                © 2025 {name}
                </p>
            </div>
            
            <div class="flex flex-col items-center md:items-end">
                <p class="mb-4 text-gray-600 dark:text-gray-400">
                    Designed & Developed with ❤️
                </p>
                <div class="flex space-x-4 items-end">
                    <a href={linkedin} class="text-gray-500 hover:text-primary transition" target="_blank">
                        <svg class="w-5 h-5">
                            <use href="/assets/images/sprite.svg#linkedin" />
                        </svg>
                    </a>
                    <a href={github} class="text-gray-500 hover:text-primary transition" target="_blank">
                        <svg class="w-5 h-5">
                            <use href="/assets/images/sprite.svg#github" />
                        </svg>
                    </a>
                     <a href={instagram} class="text-gray-500 hover:text-primary transition" target="_blank">
                        <svg class="w-4.5 h-4.5">
                            <use href="/assets/images/sprite.svg#instagram" />
                        </svg>
                    </a>
                    <a href={twitter} class="text-gray-500 hover:text-primary transition" target="_blank">
                        <svg class="w-3 h-3">
                            <use href="/assets/images/sprite.svg#twitter" />
                        </svg>
                    </a>
                    <a href={twitter} class="text-gray-500 hover:text-primary transition" target="_blank">
                        <svg class="w-4 h-4">
                            <use href="/assets/images/sprite.svg#twitter" />
                        </svg>
                    </a>
                    <a href={twitter} class="text-gray-500 hover:text-primary transition" target="_blank">
                       <svg class="w-5 h-5">
                            <use href="/assets/images/sprite.svg#twitter" />
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    </div>
</footer>
